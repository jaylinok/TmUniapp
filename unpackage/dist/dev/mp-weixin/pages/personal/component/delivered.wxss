/* 订单商品 */
.payment-view{margin: 15rpx;}
/* 下单商品 */
.payment-commodity{
background-color: #FFFFFF; border-radius: 15rpx;
font-size: 28rpx;
padding: 0 20rpx;
margin: 15rpx 0;
}
.payment-order{
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-pack: justify;
-webkit-justify-content: space-between;
        justify-content: space-between;
height: 200rpx;
margin-bottom: 8rpx;
}
.payment-order text{display: block;}
.payment-order-img{width: 200rpx; height: 200rpx;
border-radius: 8rpx;
padding-right: 10rpx;
}
.payment-order-img image{width: 200rpx; height: 200rpx;
border-radius: 8rpx;
}
.payment-title{-webkit-box-flex: 1;-webkit-flex: 1;flex: 1;}
.payment-title text:nth-child(1){
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.payment-title text:nth-child(2){
background-color: rgb(250, 250, 250);
padding: 5rpx;
border-radius: 7rpx;
display: inline-block;
}
.payment-price{text-align: right;}
.payment-flex{
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-orient: vertical;
-webkit-box-direction: normal;
-webkit-flex-direction: column;
        flex-direction: column;
-webkit-box-pack: justify;
-webkit-justify-content: space-between;
        justify-content: space-between;
width: 150rpx;
}
.text-you{color: rgb(156, 156, 156);
margin-top: 8rpx;
}
/* 提示 */
.order-tips{
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-pack: end;
-webkit-justify-content: flex-end;
        justify-content: flex-end;
-webkit-box-align: center;
-webkit-align-items: center;
        align-items: center;
height: 70rpx;
color: rgb(255, 80, 0);}
/* 价格 */
.presonal-Price{
height: 70rpx;
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-pack: end;
-webkit-justify-content: flex-end;
        justify-content: flex-end;
-webkit-box-align: center;
-webkit-align-items: center;
        align-items: center;
}
/* 付款 */
.presonal-payment{
height: 90rpx;
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-pack: end;
-webkit-justify-content: flex-end;
        justify-content: flex-end;
-webkit-box-align: center;
-webkit-align-items: center;
        align-items: center;
border-top: 1rpx solid rgb(248, 248, 248);}
.presonal-payment text{
color: rgb(255, 80, 0);
border-radius: 20rpx;
border: 1rpx solid rgb(255, 80, 0);
padding: 8rpx 40rpx;
}
